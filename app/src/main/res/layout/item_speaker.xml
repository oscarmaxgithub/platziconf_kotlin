<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/cardCornerRadius"
    android:layout_margin="5dp"
    app:cardElevation="4dp"    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/item_speakerimg"
            android:layout_width="100dp"
            android:src="@mipmap/ic_launcher"
            android:scaleType="fitCenter"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="100dp"/>

        <TextView
            android:id="@+id/item_speakerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre speaker"
            android:textStyle="bold"
            android:textSize="@dimen/txtTamañotitulo"
            android:textColor="?attr/colorPrimary"
            android:gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/item_speakerJob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trabajo espositor"
            android:textSize="@dimen/txtTamañoTexto"
            android:textColor="@color/colorAccent"
            android:gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            />

    </LinearLayout>

</androidx.cardview.widget.CardView>